[user]
	name=Johnnei
	email=johnnei07@live.nl
[alias]
	c = commit
	ca = commit -a
	cb = checkout -b
	unstage = reset HEAD --
	restore = checkout --
	st = status -s -b
	lg = log --graph --abbrev-commit --decorate --date=short --format=format:'%C(yellow)%h %C(green)%cd %C(white)%s%C(reset) - %C(bold blue)%cn%C(dim white)%d%C(reset)'
[push]
	default = simple
[merge]
	tool = tortoisemerge
[mergetool "tortoisemerge"]
	cmd = "\"C:\\Program Files\\TortoiseGit\\bin\\TortoiseGitMerge.exe\" -base \"$BASE\" -theirs \"$REMOTE\" -mine \"$LOCAL\" -merged \"$MERGED\""
